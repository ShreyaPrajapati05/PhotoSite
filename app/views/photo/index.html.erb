<html>
<head>
  <title>Photosite</title>
  <style>
    .header {
      text-align: center;
      background: #1abc9c;
      color: white;
      font-size: 30px;
    }
  </style>
</head>

<body bgcolor="#E6E6FA">
<div style="color:#696969">
  <h1><center>Photosite</center></h1>
  <h2 align="center";>User Photo Page</h2>
</div>
  <h1 align="center" class="header">Photos of <%= @user.first_name %> <%= @user.last_name %></h1>
<% @photos.each do |photo| %>
    <div align="center">
      <%= image_tag("/assets/#{photo.file_name}") %>
      <p> <b>Photo Created At</b> <%= photo.date_time %></p>
        <% @comments.where("photo_id=?",photo.id).each do |comment| %>
        <p> <b>Comment:</b> <%= comment.comment_text %></p>
        <p><b> Comment Created at: </b><%= comment.date_time %></p>
        <%= link_to @user.first_name, {action: "index",:id =>@user.id, controller: "photo"} %>
    <%end %>
</div>
    </divcenter>
  <% end %>
</div>
  </body>
</html>
